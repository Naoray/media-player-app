<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.codematch.naoray.media_player_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivityOriginal"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LiveStreamActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".MainMenueActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MediathekActivity"
            android:label="@string/title_activity_mediathek"
            android:parentActivityName=".MainMenueActivity" />
        <activity
            android:name=".CreditsActivity"
            android:label="@string/title_activity_credtis"
            android:parentActivityName=".MainMenueActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainMenueActivity" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainMenueActivity" />

        <activity
            android:name=".MainMenueActivity"
            android:label="@string/title_activity_main_menue"></activity>
    </application>

</manifest>

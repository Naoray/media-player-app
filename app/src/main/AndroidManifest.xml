<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.codematch.naoray.media_player_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LiveStreamActivity"
            android:label="@string/title_activity_live_stream"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MediathekActivity"
            android:label="@string/title_activity_mediathek"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CreditsActivity"
            android:label="@string/title_activity_credtis"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.codematch.naoray.media_player_app.MainActivity" />
        </activity>
    </application>

</manifest>
